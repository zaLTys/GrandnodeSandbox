@model AddressAttributeValueModel
@{
    Layout = Grand.Web.Admin.Extensions.Constants.Layout_AdminPopup;
    ViewBag.Title = Loc["Admin.Address.AddressAttributes.Values.EditValueDetails"];
}

<form asp-area="@Constants.AreaAdmin" asp-controller="AddressAttribute" asp-action="ValueEditPopup"
    asp-route-btnId="@Context.Request.Query["btnId"]"
    asp-route-formId="@Context.Request.Query["formId"]">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-list-alt"></i>
                        @Loc["Admin.Address.AddressAttributes.Values.EditValueDetails"]
                    </div>
                    <div class="actions">
                        <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                    </div>
                </div>
                <vc:admin-widget widget-zone="address_attribute_value_details_buttons" additional-data="Model" />
                <div class="x_content form">
                    <partial name="_CreateOrUpdateValue" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>