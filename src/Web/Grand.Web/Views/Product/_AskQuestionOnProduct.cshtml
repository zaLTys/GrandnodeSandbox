@model ProductAskQuestionSimpleModel
<input value="@Model.Id" type="hidden" id="AskQuestionProductId" name="AskQuestionProductId"/>
<div id="contact-us-product">
    <fieldset class="form-group">
        <label asp-for="AskQuestionEmail" class="col-form-label">@Loc["Products.AskQuestion.Email"]:</label>
        <span class="required">*</span>
        <input asp-for="AskQuestionEmail" placeholder="@Loc["Products.AskQuestion.Email.Hint"]" 
               v-validate="'required|email'" class="form-control ask-question-email" />
        <span class="field-validation-error">{{veeErrors.first('AskQuestionEmail')}}</span>
        <span asp-validation-for="AskQuestionEmail"></span>
    </fieldset>
    <fieldset class="form-group">
        <label asp-for="AskQuestionFullName" class="col-form-label">@Loc["Products.AskQuestion.FullName"]:</label>
        <span class="required">*</span>
        <input asp-for="AskQuestionFullName" placeholder="@Loc["Products.AskQuestion.FullName.Hint"]" 
               v-validate="'required'" class="form-control ask-question-fullname" />
        <span class="field-validation-error">{{veeErrors.first('AskQuestionFullName')}}</span>
        <span asp-validation-for="AskQuestionFullName"></span>
    </fieldset>
    <fieldset class="form-group">
        <label asp-for="AskQuestionPhone" class="col-form-label">@Loc["Products.AskQuestion.Phone"]:</label>
        <input asp-for="AskQuestionPhone" placeholder="@Loc["Products.AskQuestion.Phone.Hint"]" 
               class="form-control ask-question-phone" />
        <span asp-validation-for="AskQuestionPhone"></span>
    </fieldset>
    <fieldset class="form-group">
        <label asp-for="AskQuestionMessage" class="col-form-label">@Loc["Products.AskQuestion.Message"]:</label>
        <span class="required">*</span>
        <textarea asp-for="AskQuestionMessage" placeholder="@Loc["Products.AskQuestion.Message.Hint"]" v-validate="'required'" class="form-control ask-question-message"></textarea>
        <span class="field-validation-error">{{veeErrors.first('AskQuestionMessage')}}</span>
        <span asp-validation-for="AskQuestionMessage"></span>
    </fieldset>
    @if (Model.DisplayCaptcha)
    {
        <div class="captcha-box">
            <captcha />
        </div>
    }
    
    <div class="buttons generalMarginSupporter pt-1 pb-1">
        <input type="button" name="send-email" class="btn btn-info send-ask-question-button" 
               @@click="validateBeforeClick($event)" value="@Loc["Products.AskQuestion.Button"]"
               data-click="sendcontactusform('@Url.RouteUrl("AskQuestionOnProduct")')" />
        <span class="sr-only">@Loc["Products.AskQuestion.Button"]</span>
    </div>

</div>

<div class="alert alert-danger product-contact-error" style="display: none;">
</div>

<div class="alert alert-success product-contact-send" style="display: none;">
</div>